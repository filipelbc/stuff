[user]
    email = filipelbc@gmail.com
    name = filipelbc

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space
    excludesfile = ~/.gitignore_global
    pager = "diff-so-fancy | less --tabs=4 -RFX"

[diff]
    tool = vimdiff
    algorithm = minimal

[difftool]
    prompt = false

[color]
    branch = auto
    diff = auto
    status = auto
    showbranch = auto
    interactive = auto
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = bold
    frag = blue
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = red

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 223
    newNormal = green
    newHighlight = green 193

[credential]
    helper = cache --timeout=7200

[push]
    default = simple

[log]
    date = short

[format]
    pretty = format:%C(auto)%h %C(auto,blue)%ad %C(auto,green)%<(10,trunc)%aN %C(auto)%d %C(auto,reset)%s
