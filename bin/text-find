#!/bin/bash

[ "$#" -lt 2 ] && echo "text-find <pattern> <files>" && exit

pattern=$1
shift

grep \
    --ignore-case \
    --recursive \
    --binary-files=without-match \
    --line-number \
    --color=auto \
    --exclude-dir=.git \
    --exclude-dir=node_modules \
    --exclude-dir=bin \
    --exclude-dir=obj \
    --exclude-dir=__pycache__ \
    --exclude-dir=.aws-sam \
    --exclude=package-lock.json \
    "$pattern" \
    "$@"
